<% @title= "Edit booking"%>
<div class="caption">Edit booking</div>
<div class="span4">
	<%= form_for @booking, url: user_bookings_path(@user, @booking) do |f| %>
    <%= render 'shared/error_messages', obj: f.object %>  
   
    <%= render 'fields', f: f %>	
    <div class="pull-right">
      <%=  link_to "delete booking",user_bookings_path(@user, @booking), method: :delete, data: {confirm: "You sure?"} %>
    </div>
	  <%= f.submit "save changes", class: "btn btn-large btn-primary" %>
	<% end %>
	<div>
    <%= link_to 'Back', :back %>
  </div> 
</div>