<% @title= "Personnel"%>
<div class="caption"><%= @title%></div>
<div class="span6">
<% if can? :manage, User %>
<div><%= link_to "Add new user", new_user_registration_path %></div>
<% end %>
<br/>
<ul class='user-list'>
	  <% @users.each do |user| %>
	    <li>
	      <%= link_to gravatar_for(user), user_bookings_path(user) %>
	      <%= link_to "#{user.name} #{user.lastname}", user_bookings_path(user) %>
	    </li>
	  <% end %>
</ul>
